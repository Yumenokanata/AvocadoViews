<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/leftcontent_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/company_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3sp"
            android:maxLines="1"
            android:text="株式会社株式会社株式会社株式会社株式会社株式会社"
            android:textColor="@color/color_gr1"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/company_profile_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3sp"
            android:maxLines="2"
            android:text="株式会社株式会社株式会社株式会社株式会社株式会社"
            android:textColor="@color/color_gr1"
            android:textSize="15sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/business_detail_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3sp"
                android:lines="2"
                android:text="株式会社株式会社株式会社株式会社株式会社株式会社株式会社株式会社株式会社"
                android:textColor="@color/color_gr3"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/location_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="48dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3sp"
                android:lines="1"
                android:text="株式会社株式会社株式会社株式会社株式会社株式会社株式会社株式会社株式会社"
                android:textColor="@color/color_gr3"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/income_textiview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="48dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3sp"
                android:lines="1"
                android:text="株式会社株式会社株式会社株式会社株式会社株式会社株式会社株式会社株式会社"
                android:textColor="@color/color_gr3"
                android:textSize="14sp" />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/item_keep_btn"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/leftcontent_linearlayout"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/leftcontent_linearlayout"
        android:layout_centerVertical="true"
        android:scaleType="center" />

</RelativeLayout>