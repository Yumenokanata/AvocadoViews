<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DateSelectPicker">
        <attr name="dsp_hideArrow" format="boolean"/>
        <attr name="dsp_arrowImg" format="reference"/>
        <attr name="dsp_arrowWidth" format="dimension"/>
        <attr name="dsp_arrowHeight" format="dimension"/>
        <attr name="dsp_arrowMarginStart" format="dimension"/>
        <attr name="dsp_arrowMarginEnd" format="dimension"/>

        <attr name="dsp_hintTextColor" format="color"/>
        <attr name="dsp_hintText" format="string"/>

        <attr name="dsp_textColor" format="color"/>
        <attr name="dsp_textSize" format="dimension"/>
        <attr name="dsp_textViewWidth" format="dimension"/>
        <attr name="dsp_textViewHeight" format="dimension"/>

        <attr name="dsp_postfix" format="string"/>

        <attr name="dsp_underlineHeight" format="dimension"/>
        <attr name="dsp_underlineColor" format="color"/>
        <attr name="dsp_hideUnderline" format="boolean"/>
        <attr name="dsp_underlineMarginTop" format="dimension"/>

        <attr name="dsp_viewWidth" format="dimension"/>

        <attr name="dsp_showMode" format="enum">
            <enum name="ymd" value="1"/>
            <enum name="ym" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LoadingLayout">
        <attr name="ll_uselessView" format="reference"/>
        <attr name="ll_emptyView" format="reference"/>
        <attr name="ll_errorView" format="reference"/>
        <attr name="ll_loadingView" format="reference"/>
        <attr name="ll_defaultShowMode" format="enum">
            <enum name="content" value="0"/>
            <enum name="empty" value="1"/>
            <enum name="error" value="2"/>
            <enum name="loading" value="3"/>
            <enum name="useless" value="4"/>
        </attr>
        <attr name="ll_toolShowMode" format="enum">
            <enum name="content" value="0"/>
            <enum name="empty" value="1"/>
            <enum name="error" value="2"/>
            <enum name="loading" value="3"/>
            <enum name="useless" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="DoubleRefreshRecyclerLayout">
        <attr name="dr_enableScrollbar" format="boolean"/>
    </declare-styleable>
</resources>